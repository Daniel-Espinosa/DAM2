<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Tree de Desarroladores -->
    <record model="ir.ui.view" id="desarrollador.desarrollador_list">
      <field name="name">Desarrolladores</field>
      <field name="model">modulo.desarrollador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="cif"/>
          <field name="direccion"/>
          <field name="telefono"/>
          <field name="email"/>
        </tree>
      </field>
    </record>

    <!-- Tree de Juegos -->
    <record model="ir.ui.view" id="desarrollador.juego_list">
      <field name="name">Juegos</field>
      <field name="model">modulo.juego</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="pegi"/>
          <field name="fecha"/>
          <field name="precio"/>
          <field name="genero"/>
          <field name="desarrollador"/>
        </tree>
      </field>
    </record>

    <!-- Form de Desarrolador -->
    <record model="ir.ui.view" id="desarrollador.desarrollador_form">
      <field name="name">Desarrolador</field>
      <field name="model">modulo.desarrollador</field>
      <field name="arch" type="xml">
        <form string="Desarollador">
          <sheet>
            <h1>Nombre: <field name="nombre"/></h1>
            <group>
              <field name="cif" label="CIF: "/>
              <field name="direccion" label="Direccion: "/>
              <field name="telefono" label="Telefono: "/>
              <field name="email" label="Email: "/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Form de Juego -->
    <record model="ir.ui.view" id="desarrollador.juego_form">
      <field name="name">Juego</field>
      <field name="model">modulo.juego</field>
      <field name="arch" type="xml">
        <form name="Juego">
          <sheet>
            <h1>Nombre: <field name="nombre"/></h1>
            <group>
              <field name="pegi" label="PEGI: "/>
              <field name="fecha" label="Fecha: "/>
              <field name="precio" label="Precio: "/>
              <field name="genero" label="Genero: "/>
              <field name="desarrollador" label="Desarrollador: "/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Accion de Desarollador -->
    <record model="ir.actions.act_window" id="desarrollador.action_window">
      <field name="name">desarrollador window</field>
      <field name="res_model">modulo.desarrollador</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Accion de Juego -->
    <record model="ir.actions.act_window" id="desarrollador.juego_action_window">
      <field name="name">juego window</field>
      <field name="res_model">modulo.juego</field>
      <field name="view_mode">tree,form</field>
    </record>


