<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Tree de Desarroladores -->
    <record model="ir.ui.view" id="desarrollador.list">
      <field name="name">Desarrolladores</field>
      <field name="model">modulo.desarrollador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="cif"/>
          <field name="direccion"/>
          <field name="telefono"/>
          <field name="email"/>
        </tree>
      </field>
    </record>

